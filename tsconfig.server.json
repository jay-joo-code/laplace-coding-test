{
  "extends": "@tsconfig/node12/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "./server",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },

    // configurations
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "exclude": [
    "./src/client",
    "node_modules"
  ],
  "include": [
    "./src/server"
  ]
}