{
  "compilerOptions": {
    "target": "es2019",
    "jsx": "react-jsx",
    "module": "commonjs",
    "outDir": "./dist/",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/client/*"
      ],
    },
    
    // configurations
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "./src/server",
    "node_modules"
  ],
  "include": [
    "./src/client/**/*",
    "./src/client/types/**/*.d.ts"
  ]
}